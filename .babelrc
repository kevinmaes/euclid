{
  "env": {
    "test": {
      "presets":[
        ["env", { "modules": false }],
        "react",
      ],
      "plugins": [
        "transform-es2015-modules-commonjs",
      ]
    },
    "production": {
      "plugins": [["emotion", { "hoist": true }]]
    },
    "development": {
      "presets": ["react-app"],
      "plugins": [
        [
          "emotion",
          {
            "sourceMap": true,
            "autoLabel": true,
            "labelFormat": "[filename]"
          }
        ]
      ]
    }
  }
}
